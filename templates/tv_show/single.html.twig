{% extends "base.html.twig" %}
{% block title %}
   {{show.title}}  - {{parent()}}
{% endblock %}

{% block body %}

    <main>

        <section class="py-5 text-center container">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light"> {{show.title}} </h1>
                    <img src=" {{asset('img/' ~ show.image)}} " alt="" height="400">
                    <p class="lead text-muted">
                        <a href="#"><span class="badge bg-secondary">Saison 1</span></a>
                        <a href="#"><span class="badge bg-secondary">Saison 2</span></a>
                    </p>
                    <p class="lead text-muted">
                        Avec : <a href="#">Pedro Pascal</a>, <a href="#">Diana Lee Inosanto</a>, <a href="#">Richard Ayoade</a>
                    </p>
                </div>
            </div>
        </section>

        <div class="py-5 bg-light">
            <div class="container">
                <p>
                    {{show.synopsis}}
                </p>
            </div>
        </div>

    </main>

{% endblock %}