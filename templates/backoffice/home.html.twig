{% extends 'backoffice/layout.html.twig' %}

{% block title %}
    Backoffice - {{ parent() }}
{% endblock %}

{% block content %}

<div class="container-fluid" style="height: 900px;">
    
    <div class="row">
    
        <div class="col-md-12">
        {% if app.user %}
        <h2 class="fw-bold mb-4 text-muted" style="text-shadow: 8px 6px 10px rgba(0, 0, 0, 0.445);">Bienvenue dans le BackOffice d'O'flix</h2>
        {% endif %}
        </div>
        <div class="row ">
            <div class="col-md-4 mb-3"> 

                {# CARD TV Shows#}
                    <div class="card text-white bg-custom mb-3 h-100" style=" box-shadow:8px 6px 10px rgba(0, 0, 0, 0.445);" >
                        <div class="card-header fw-bold" >TV Shows</div>
                            <div class="card-body">
                                <h5 class="card-title"></h5>
                                <p class="card-text">
                                Gérer les séries TV depuis le panneau d'administration
                                </p>
                            </div>
                    </div>
                {# CARD CLOSE #}

            </div>

             <div class="col-md-4 mb-3"> 

                {# CARD CHARACTERS #}
                    <div class="card text-white bg-custom mb-3 h-100" style=" box-shadow:8px 6px 10px rgba(0, 0, 0, 0.445);" >
                        <div class="card-header fw-bold" >Personnages</div>
                            <div class="card-body">
                                <h5 class="card-title">Secondary card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                    </div>
                {# CARD CLOSE #}

            </div>

             <div class="col-md-4 mb-3"> 

                {# CARD CATEGORIES #}
                    <div class="card text-white bg-custom mb-3 h-100" style=" box-shadow:8px 6px 10px rgba(0, 0, 0, 0.445);" >
                        <div class="card-header fw-bold" >Catégories </div>
                            <div class="card-body">
                                <h5 class="card-title">Secondary card title</h5>
                                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            </div>
                    </div>
                {# CARD CLOSE #}

            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card text-white bg-dark">
                    <div class="card-header fs-4 fw-bold fst-italic">
                        Dernières entrées
                    </div>
                    <div class="card-body">                 
                        <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Titre</th>
                                    <th>Synopsis</th>
                                    <th>Image</th>
                                    <th>Slug</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for tv_show in shows %}
                                <tr>
                                    <td>{{ tv_show.id }}</td>
                                    <td>{{ tv_show.title }}</td>
                                    <td>{{ tv_show.synopsis }}</td>
                                    <td>{{ tv_show.image }}</td>
                                    <td>{{ tv_show.slug }}</td>
                                    <td>
                                        <a style="text-decoration: none; color: white;" href="{{ path('backoffice_tv_show_show', {'id': tv_show.id}) }}" class="card-link badge rounded-pill bg-success">Détail</a>
                                        <a style="text-decoration: none; color: white; " href="{{ path('backoffice_tv_show_edit', {'id': tv_show.id}) }}" class="card-link badge rounded-pill bg-danger mx-2">Edit</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>   
                </div>
            </div>
        </div>

    </div>
</div>


{% endblock %}