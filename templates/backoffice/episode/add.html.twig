{% extends "backoffice/layout.html.twig" %}
{% block title %}
    Ajouter épisode - Backoffice - {{parent()}}
{% endblock %}

{% block content %}
        <section class="container text-center">
            <div class="row py-lg-5">
                <div class="col-lg-6 col-md-8 mx-auto">
                    <h1 class="fw-light">Ajouter un épisode - {{season.tvShow.title}} - Saison {{season.seasonNumber}} </h1>
                </div>
            </div>
        </section>

        <div class="input-group-sm mb-3 mx-auto" style="width: 450px;">
            {{ form_start(formView, {'attr': {'novalidate': 'novalidate'}}) }}
                <button class="btn btn-secondary">Valider</button>
            {{ form_end(formView) }}
        </div>  

    </main>
{% endblock %}